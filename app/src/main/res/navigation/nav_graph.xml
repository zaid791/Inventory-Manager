<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/supplierFragment">

    <fragment
        android:id="@+id/customerFragment"
        android:name="com.example.inventorymanager.home.view.fragment.CustomerFragment"
        android:label="fragment_buyer"
        tools:layout="@layout/fragment_customer">
        <action
            android:id="@+id/action_customerFragment_to_addUserFragment"
            app:destination="@id/addUserFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/inventoryFragment"
        android:name="com.example.inventorymanager.home.view.fragment.InventoryFragment"
        android:label="fragment_inventory"
        tools:layout="@layout/fragment_inventory" >
        <action
            android:id="@+id/action_inventoryFragment_to_addProductFragment2"
            app:destination="@id/addProductFragment2" />
    </fragment>
    <fragment
        android:id="@+id/supplierFragment"
        android:name="com.example.inventorymanager.home.view.fragment.SupplierFragment"
        android:label="fragment_seller"
        tools:layout="@layout/fragment_supplier">
        <action
            android:id="@+id/action_supplierFragment_to_addUserFragment"
            app:destination="@id/addUserFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_supplierFragment_to_supplierDetailsFragment"
            app:destination="@id/supplierDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.inventorymanager.login.view.activity.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/supplierDetailsFragment"
        android:name="com.example.inventorymanager.home.view.fragment.SupplierDetailsFragment"
        android:label="fragment_supplier_details"
        tools:layout="@layout/fragment_supplier_details">
        <action
            android:id="@+id/action_supplierDetailsFragment_to_newProductPurchaseFromSupplierFragment"
            app:destination="@id/newProductPurchaseFromSupplierFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.inventorymanager.home.view.activity.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.example.inventorymanager.home.view.fragment.AddUserFragment"
        android:label="fragment_add_user"
        tools:layout="@layout/fragment_add_user" />
    <fragment
        android:id="@+id/newProductPurchaseFromSupplierFragment"
        android:name="com.example.inventorymanager.home.view.fragment.NewProductPurchaseFromSupplierFragment"
        android:label="fragment_new_product_purchase_from_supplier"
        tools:layout="@layout/fragment_new_product_purchase_from_supplier" />
    <fragment
        android:id="@+id/addProductFragment2"
        android:name="com.example.inventorymanager.home.view.fragment.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" />
</navigation>